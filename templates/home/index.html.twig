{% extends 'base.html.twig' %}

{% block title %}Portfolio - SiteName{% endblock %}

{% block body %}
    <div class="grid">
        {# {{ dump(images) }} #}
    </div>

    <div class="grid">
        {% set big_array = [4, 8, 3, 5, 8, 9] %}
        {% set count = 0 %}
        {% set compare = 0 %}

        {% for key, image in images %}
            {% if key == compare %}
                <div class="grid-item span-2">
                    <img src="{{ asset('images/gallery/400x400_',{{ image.name|basename }}) }}" alt="images/gallery/400x400_{{ image.name|basename }}">
                </div>
                {% set compare = compare + big_array[count] %}
                {% set count = count + 1 %}
            {% else %}
                <div class="grid-item">
                    <img src="images/uploads/200x200_{{ image.name }}" alt="{{ image.name }}">
                </div>
            {% endif %}

            {% if count > 5 %}
                {% set count = 0 %}
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
